<br />
<div class="booyah-box col-10 offset-1">
  <div class="text-center">
   <h1><%= current_course.title %></h1>
   <br />
  <%= link_to 'Preview As Student', course_path(current_course), class: 'btn btn-primary btn-large' %>
  <br class="clr" />

  <br />

  <div class="text-center">
    <%= link_to 'Add a new section...', new_instructor_course_section_path(current_course), class: 'btn btn-primary btn-large' %>
  </div>


  <ul>
    <% current_course.sections.each do |section| %>
    <li>
      <%= section.title %>
      <%= link_to 'New Lesson', new_instructor_course_section_path(section), class: 'float-right btn btn-primary btn-sm' %>
      <br />
      <ul>
        <% section.lessons.each do |lesson| %>
        <li>
          <b><%= lesson.title %></b>
          -
          <%= lesson.subtitile %>
        </li>
        <% end %>
      </ul>
      <br class="clr"/>
    </li>
    <% end %>
  </ul>


</div>